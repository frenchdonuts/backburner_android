<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_meditation.ui.AddMeditationFragment">

    <EditText
        android:id="@+id/etMeditation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btAddMeditation"
        android:padding="8dp"
        />
    <Button
        android:id="@+id/btAddMeditation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_meditation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etMeditation"
        android:layout_margin="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>