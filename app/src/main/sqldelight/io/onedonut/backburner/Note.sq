CREATE TABLE note (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    text TEXT NOT NULL,
    created_at INTEGER NOT NULL DEFAULT (strftime('%s','now'))
);

insertNote:
INSERT INTO note(text)
VALUES (?);

updateNote:
UPDATE note
SET text = :text
WHERE id = :id;

deleteNote:
DELETE FROM note
WHERE id = :id;

selectAll:
SELECT *
FROM note
ORDER BY created_at DESC;
