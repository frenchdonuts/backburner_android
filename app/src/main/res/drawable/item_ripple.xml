<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleColor">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/item_border_thickness"
                android:color="@color/itemBorder" />
            <corners
                android:bottomLeftRadius="@dimen/item_corner_radius"
                android:bottomRightRadius="@dimen/item_corner_radius"
                android:topLeftRadius="@dimen/item_corner_radius"
                android:topRightRadius="@dimen/item_corner_radius"/>
        </shape>
    </item>

    <item
        android:left="@dimen/item_border_thickness"
        android:right="@dimen/item_border_thickness"
        android:top="@dimen/item_border_thickness"
        android:bottom="@dimen/item_border_thickness">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <corners
                android:bottomLeftRadius="@dimen/item_corner_radius"
                android:bottomRightRadius="@dimen/item_corner_radius"
                android:topLeftRadius="@dimen/item_corner_radius"
                android:topRightRadius="@dimen/item_corner_radius"/>
        </shape>
    </item>
</ripple>